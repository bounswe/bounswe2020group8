{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Boun Group 8",
    "description": "Application API",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:8080",
  "basePath": "/",
  "tags": [
    {
      "name": "Users",
      "description": "API for users in the system"
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/client/init": {
      "post": {
        "parameters": [
          {
            "in": "query",
            "name": "tokenCode",
            "description": "token code",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/ClientWithToken"
            }
          },
          "401": {
            "description": "Invalid token code"
          }
        }
      }
    },
    "/client/login": {
      "post": {
        "parameters": [
          {
            "in": "query",
            "name": "password",
            "required": true,
            "type": "string"
          },
          {
            "in": "query",
            "name": "email",
            "required": true,
            "type": "string"
          },
          {
            "in": "query",
            "name": "type",
            "required": true,
            "type": "string",
            "enum": ["CLIENT", "VENDOR"]
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/ClientWithToken"
            }
          },
          "400": {
            "description": "Invalid email or password or type"
          }
        }
      }
    },
    "/client/verifyEmail": {
      "get": {
        "parameters": [
          {
            "in": "query",
            "name": "verifyEmailToken",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "returnMessage": "Client is now verified!!",
              "$ref": "#/definitions/OnlyClient"
            }
          },
          "400": {
            "description": "Insufficient token"
          }
        }
      }
    },
    "/client/signup": {
      "post": {
        "parameters": [
          {
            "in": "query",
            "name": "name",
            "required": true,
            "type": "string"
          },
          {
            "in": "query",
            "name": "lastName",
            "required": true,
            "type": "string"
          },
          {
            "in": "query",
            "name": "email",
            "required": true,
            "type": "string"
          },
          {
            "in": "query",
            "name": "password",
            "required": true,
            "type": "string"
          },
          {
            "in": "query",
            "name": "passwordConfirm",
            "required": true,
            "type": "string"
          },
          {
            "in": "query",
            "name": "type",
            "required": true,
            "type": "string",
            "enum": ["CLIENT", "VENDOR"]
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "returnMessage": "Verification email sent!",
              "$ref": "#/definitions/OnlyClient"
            }
          },
          "400": {
            "description": "Invalid email or password or type"
          }
        }
      }
    },
    "/client/changePassword": {
      "post": {
        "parameters": [
          {
            "in": "query",
            "name": "tokenCode",
            "description": "token code",
            "required": true,
            "type": "string"
          },
          {
            "in": "query",
            "name": "newPassword",
            "required": true,
            "type": "string"
          },
          {
            "in": "query",
            "name": "newPasswordRepeat",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "Invalid password"
          }
        }
      }
    },
    "/client/signupWithGoogle": {
      "post": {
        "parameters": [
          {
            "in": "query",
            "name": "email",
            "required": true,
            "type": "string"
          },
          {
            "in": "query",
            "name": "googleID",
            "required": true,
            "type": "string"
          },
          {
            "in": "query",
            "name": "type",
            "required": true,
            "type": "string",
            "enum": ["CLIENT", "VENDOR"]
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "message": "You succesfully signed up",
              "$ref": "#/definitions/ClientWithToken"
            },
            "returnCode": 0,
            "returnMessage": "Success"
          },
          "400": {
            "description": "Invalid email, type or googleID"
          }
        }
      }
    },
    "/client/loginWithGoogle": {
      "post": {
        "parameters": [
          {
            "in": "query",
            "name": "email",
            "required": true,
            "type": "string"
          },
          {
            "in": "query",
            "name": "googleID",
            "required": true,
            "type": "string"
          },
          {
            "in": "query",
            "name": "type",
            "required": true,
            "type": "string",
            "enum": ["CLIENT", "VENDOR"]
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "message": "You succesfully logged in",
              "$ref": "#/definitions/ClientWithToken"
            },
            "returnCode": 0,
            "returnMessage": "Success"
          },
          "400": {
            "description": "Invalid email, type or googleID"
          }
        }
      }
    },
    "/client/forgotPassword": {
      "post": {
        "parameters": [
          {
            "in": "query",
            "name": "email",
            "description": "Email Address",
            "required": true,
            "type": "string"
          },
          {
            "in": "query",
            "name": "type",
            "required": true,
            "type": "string",
            "enum": ["CLIENT", "VENDOR"]
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "Invalid e-mail or type."
          }
        }
      }
    },
    "/client/resetPassword": {
      "post": {
        "parameters": [
          {
            "in": "query",
            "name": "resetPasswordToken",
            "description": "Reset Password Token",
            "required": true,
            "type": "string"
          },
          {
            "in": "query",
            "name": "newPassword",
            "required": true,
            "type": "string"
          },
          {
            "in": "query",
            "name": "newPasswordCheck",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "Invalid resetPasswordToken or newPassword or newPasswordCheck"
          }
        }
      }
    }
  },
  "definitions": {
    "Client": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "mongoID"
        },
        "name": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      },
      "xml": {
        "name": "User"
      }
    },
    "ClientWithToken": {
      "type": "object",
      "properties": {
        "tokenCode": {
          "type": "string"
        },
        "client": {
          "$ref": "#/definitions/Client"
        }
      }
    },
    "OnlyClient": {
      "type": "object",
      "properties": {
        "client": {
          "$ref": "#/definitions/Client"
        }
      }
    }
  }
}
