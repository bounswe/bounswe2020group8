<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true" android:background="#FFFFFF" android:clickable="true"
    android:id="@+id/fragment_settings"
    tools:context=".SignupCustomerActivity">

    <TextView
        android:id="@+id/profile_cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp" android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/profile_cards"
        android:textColor="@color/alert_default_icon_color"
        android:textSize="25sp"
        android:textStyle="bold" app:layout_constraintTop_toBottomOf="@id/profile_address_add"
        tools:layout_editor_absoluteX="0dp"/>
    <ImageView
        android:id="@+id/logo"
        android:layout_width="159dp"
        android:layout_height="173dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:alpha="0.7"
        android:contentDescription="@string/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo"/>
    <TextView
        android:id="@+id/profile_addresses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="@color/colorPrimary"
        android:gravity="center" android:text="@string/profile_addresses"
        android:textColor="@color/alert_default_icon_color" android:textSize="25sp"
        android:textStyle="bold" app:layout_constraintTop_toBottomOf="@+id/logo"
        tools:layout_editor_absoluteX="163dp"/>
    <ScrollView
        android:id="@+id/profile_addresses_scroll"
        android:layout_width="match_parent" android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_addresses" tools:layout_editor_absoluteX="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:baselineAligned="false" android:orientation="horizontal">
                <TextView
                    android:id="@+id/profile_address_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="false" android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp" android:layout_weight="0"
                    android:fontFamily="@font/ubuntu_bold"
                    android:text="@string/profile_address_1" android:textColor="#F44336" android:textSize="20sp"/>
                <ImageButton
                    android:id="@+id/delete_button_1"
                    android:layout_width="30dp" android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" android:layout_marginRight="10dp"
                    android:layout_weight="0" android:background="@color/colorPrimary"
                    app:srcCompat="@android:drawable/ic_menu_delete"/>
                <ImageButton
                    android:id="@+id/edit_button_1"
                    android:layout_width="30dp" android:layout_height="30dp"
                    android:layout_alignParentRight="false" android:layout_centerVertical="true"
                    android:layout_marginRight="5dp" android:layout_toLeftOf="@id/delete_button_1"
                    android:background="@color/colorPrimary" app:srcCompat="@android:drawable/ic_menu_edit"/>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <ScrollView
        android:id="@+id/profile_cards_scroll"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_cards" tools:layout_editor_absoluteX="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:baselineAligned="false" android:orientation="horizontal">
                <TextView
                    android:id="@+id/profile_cards_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="false" android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp" android:layout_weight="0"
                    android:fontFamily="@font/ubuntu_bold"
                    android:text="@string/profile_cards_1" android:textColor="#F44336" android:textSize="20sp"/>
                <ImageButton
                    android:id="@+id/delete_button_2"
                    android:layout_width="30dp" android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" android:layout_marginRight="10dp"
                    android:layout_weight="0" android:background="@color/colorPrimary"
                    app:srcCompat="@android:drawable/ic_menu_delete"/>
                <ImageButton
                    android:id="@+id/edit_button_2"
                    android:layout_width="30dp" android:layout_height="30dp"
                    android:layout_alignParentRight="false" android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/delete_button_2"
                    android:background="@color/colorPrimary" app:srcCompat="@android:drawable/ic_menu_edit"/>

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
    <ImageButton
        android:id="@+id/profile_address_add"
        android:layout_width="match_parent" android:layout_height="40dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/profile_addresses_scroll"
        app:srcCompat="@android:drawable/ic_menu_add"
        tools:layout_editor_absoluteX="167dp"/>
    <ImageButton
        android:id="@+id/profile_card_add"
        android:layout_width="match_parent" android:layout_height="40dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/profile_cards_scroll" app:srcCompat="@android:drawable/ic_menu_add"
        tools:layout_editor_absoluteX="167dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
