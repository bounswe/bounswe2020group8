            android:layout_centerHorizontal="true"
            android:background="@color/colorWhite" android:fontFamily="@font/ubuntu_bold"
            android:gravity="center_horizontal"
            android:text="" android:textColor="@color/colorPrimaryDark" android:textSize="40sp"/>
        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/username" android:layout_centerHorizontal="false"
