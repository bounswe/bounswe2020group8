<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignupVendorActivity"
        android:background="@color/signupPageBackgroundColor">
    <ImageView
            android:layout_width="159dp"
            android:layout_height="173dp"
            app:srcCompat="@drawable/logo"
            android:id="@+id/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintVertical_bias="0.0"
            android:contentDescription="@string/logo"
            android:alpha="0.7"
            app:layout_constraintBottom_toTopOf="@+id/signup_company_name"/>

    <TextView
            android:id="@+id/error_message"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/signup_company_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.499"
            android:layout_marginBottom="20dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/signup_company_name"
            android:hint="@string/signup_company_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:autofillHints=""
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/logo"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/address_state"
            android:hint="@string/signup_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:autofillHints=""
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/signup_company_name"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/address_zipcode"
            android:hint="@string/signup_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/address_state"
            android:autofillHints=""/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/address_block"
        android:hint="@string/signup_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/address_zipcode"
        android:autofillHints=""/>

    <LinearLayout
            android:id="@+id/checkbox_Layout"
            android:layout_width="366dp"
            android:layout_height="29dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/address_block"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">
        <CheckBox
                android:id="@+id/accept_terms_and_conditions"
                android:layout_width="34dp"
                android:layout_height="match_parent"/>
        <TextView
                android:id="@+id/Terms_and_condition_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:text="I have read and accept the Terms and Conditions"
                android:textColor="#000000"
                android:textSize="14sp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_Layout">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/back_button"
            android:layout_width="117dp"
            android:layout_height="51dp"
            android:layout_centerInParent="true"
            android:onClick="signup"
            android:text="@string/signup_button"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/save_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="117dp"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:onClick="login"
            android:text="@string/login_button"/>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="117dp"
            android:layout_height="51dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
        />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
